<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/relativeLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<ImageView
    android:id="@+id/imagerdx"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:adjustViewBounds="true"
    android:src="@drawable/rdx" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/imagerdx"
    android:orientation="vertical">
    <TextView
        android:id="@+id/rdxabout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="RDX - Center of Fitness and Box"
        android:singleLine="true"
        android:textSize="23sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/adress"
        android:text="Adress: Bohdana Hmelnizkogo street 29, Kharkiv"
        android:textSize="20sp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="16sp"
        android:textColor="@android:color/black"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/phone"
        android:text="Phone +380935690529"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16sp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/Monday"
        android:text="Monday 07:00 - 20:00"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="16sp"
        android:textColor="@android:color/black"
        android:gravity="right"
        />
    <TextView
        android:id="@+id/Tuesday"
        android:text="Tuesday 07:00 - 20:00"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="16sp"
        android:textColor="@android:color/black"
        android:gravity="right"
        />
    <TextView
        android:id="@+id/wednesday"
        android:text="Wednesday 07:00 - 20:00"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="16sp"
        android:textColor="@android:color/black"
        android:gravity="right"
        />
    <TextView
        android:id="@+id/Thursday"
        android:text="Thursday 07:00 - 20:00"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="16sp"
        android:textColor="@android:color/black"
        android:gravity="right"
        />
    <TextView
        android:id="@+id/Friday"
        android:text="Friday 07:00 - 20:00"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="16sp"
        android:textColor="@android:color/black"
        android:gravity="right"
        />
    <TextView
        android:id="@+id/Saturday"
        android:text="Saturday 09:00 - 20:00"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="16sp"
        android:textColor="@android:color/black"
        android:gravity="right"
        />
    <TextView
        android:id="@+id/Sunday"
        android:text="Sunday 10:00 - 17:00"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="16sp"
        android:textColor="@android:color/black"
        android:gravity="right"
        />   
</LinearLayout>

</RelativeLayout>
